<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_rectangle_white"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/iotd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insult_of_the_day"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            style="?attr/themeDependantTitleStyle"/>

        <TextView
            android:id="@+id/insult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iotd_title"
            android:layout_centerHorizontal="true"
            android:text="@string/iotd_widget_initial_state_notice"/>

    </RelativeLayout>

</FrameLayout>